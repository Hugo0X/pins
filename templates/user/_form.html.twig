<div class="col-md-12">
    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-12">{{ form_row(form.email) }}</div>
    </div>

    <div>
        {{ form_row(form.roles, {label_attr: {class: 'checkbox-custom'}, attr: {class: 'list-group-item roles'}}) }}
    </div>

    {{ form_widget(form) }}
    <div class="mt-3 btn-group">
            <button class="btn btn-primary btn-lg">Register</button>
            <button class="btn btn-warning btn-lg" type="reset" title="Effacer la saisie">Cancel</button>    
    </div>
    {{ form_end(form) }}
</div>

