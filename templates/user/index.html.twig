{% extends 'layouts/base.html.twig' %}

{% block title "User admin"  %}
{% block body %}
    {#<h1>User index</h1> #}
	<div class="col-md-12">
        <h1 class="mb-4 text-center text-muted">The {{  users | length }} users</h1>
		
		 <div class="table-responsive mt-4">
			<table class="table table-striped table-hover">
				<thead class="table-dark">
					<tr class="bg-entete">
						<th class="col-identifiants">Id</th>
						<th>Email</th>
						<th>Role</th>
						<th>FirstName</th>
						<th>LastName</th>
						<th>Created At</th>
						<th>Verified</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr onclick="window.location.href = '{{ path('app_user_show', {'id': user.id}) }}'">
							<td>{{ user.id }}</td>
							<td>{{ user.email }}</td>
							<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
							<td>{{ user.lastName }}</td>
							<td>{{ user.firstName }}</td>
							<td>{{ user.createdAt|date("d/m/Y H:i:s") }}</td>
							<td>{{ user.isVerified}}</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="8">No user found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>	
	</div>		
{% endblock %}