{% extends 'layouts/base.html.twig' %}

{% block title "Categories admin"  %}
{% block body %}
    {#<h1>User index</h1> #}
	<div class="col-md-12">
        <h1 class="mb-4 text-center text-muted">The {{  categories | length }} categories</h1>
		
		 <div class="table-responsive mt-4">
			<table class="table table-striped table-hover">
				<thead class="table-dark">
					<tr class="bg-entete">
						<th class="col-identifiants">Id</th>
						<th>Title</th>
						<th>Description</th>
						<th>Link</th>
					</tr>
				</thead>
				<tbody>
					{% for category in categories %}
						 <tr onclick="window.location.href = '{{ path('app_category_show', {'id': category.id}) }}'">{#  #}
							<td>{{ category.id }}</td>
							<td>{{ category.title }}</td>
							<td>{{ category.description }}</td>
							<td>{{ category.imageName }}</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="8">No category found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>	
	</div>		
{% endblock %}