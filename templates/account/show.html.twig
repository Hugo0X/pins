{% extends 'layouts/base.html.twig' %}

{% block title "Profile"  %}
{% block body %}
        <div class="row">
                <div class="col-md-6 mx-auto text-center">
                        <h1 class="my-5">Profile</h1>

                        <a href="https://fr.gravatar.com/" target="_blank"><img src={{ app.user.gravatarUrl}} alt="{{ app.user.email }}'s Avatar" class="rounded-circle shadow"></a>
                       

                        <p class="mt-5 lead">{{ app.user.email }}</p>
                        <p class="h2">{{ app.user.getFullName }}</p>
                        <p class=""><small>Account created on {{ app.user.createdAt|date('d/m/Y') }}</small></p>

                        <a href="{{ path('app_account_edit')}}">Edit Account</a> | 
                        <a href="{{ path('app_account_changePassword')}}">Change Password</a>

                </div>
        </div>
{% endblock %}